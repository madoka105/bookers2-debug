<div class='container px-5 px-sm-0'>
  <div class='row'>
    <% if @users.exists? %>

      <h1>Follower Users</h1>
      <table class='table'>
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
            <th colspan="3"></th>
            <th colspan="3"></th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
           <% @users.each do |user| %>
          <tr>
          <td><%= image_tag user.get_profile_image, size:'50x50' %></td>
            <td><%= user.name %></td>
            <td>フォロー数: <%= user.followings.count %></td>
            <td>フォロワー数: <%= user.followers.count %></td>
            <td></td>
          </tr>
          <% end %>
        </tbody>
      </table>

  <% else %>
  <p>ユーザーはいません</p>
<% end %>
</div>
</div>